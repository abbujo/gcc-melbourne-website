---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/500.css";
import "@fontsource/montserrat/700.css";
import "@fontsource/montserrat/800.css";
import "@fontsource/montserrat/900.css";

const {
  title = "GCC Melbourne | Commercial Cleaning",
  description = "Commercial cleaning services in Melbourne, VIC.",
  preloadImage,
  preloadImageSrcSet,
  preloadImageSizes,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-font="montserrat">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}/favicon.svg`}
    />
    <link
      rel="icon"
      type="image/x-icon"
      href={`${import.meta.env.BASE_URL}/favicon.ico`}
    />
    <SEO title={title} description={description} />
    <slot name="head" />
    <!-- Fonts are now imported via @fontsource in component script -->
    {
      preloadImage && (
        <link
          rel="preload"
          as="image"
          href={preloadImage}
          imagesrcset={preloadImageSrcSet}
          imagesizes={preloadImageSizes}
          fetchpriority="high"
        />
      )
    }
  </head>
  <body>
    <Header />
    <slot />
    <Footer />

    <!-- Mobile sticky bottom CTAs -->
    <div class="gcc-mobile-cta" aria-label="Quick actions">
      <div class="gcc-mobile-cta-inner">
        <a
          class="gcc-btn gcc-btn-outline gcc-mobile-cta-btn"
          href="tel:+61481422769"
        >
          Call Us
        </a>
        <a class="gcc-btn gcc-btn-primary gcc-mobile-cta-btn" href="/contact">
          Get a Quote
        </a>
      </div>
    </div>
  </body>
</html>
