---
interface Props {
    href: string;
    class?: string;
}

const { href, class: className } = Astro.props;
---

<a href={href} class:list={["card", className]}>
    <slot />
</a>

<style>
    .card {
        display: flex;
        flex-direction: column;
        padding: 2rem;
        background: white;
        border-radius: 1rem;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;
        border: 1px solid var(--border-soft, #e2e8f0);
        height: 100%;
    }

    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px -8px rgba(0, 0, 0, 0.1);
        border-color: var(--brand-teal, #00897b);
    }
</style>
