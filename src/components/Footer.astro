---
const year = new Date().getFullYear();
const base = import.meta.env.BASE_URL;
---

<footer class="footer-dark">
  <div class="gcc-container">
    <!-- Top CTA Bar -->
    <div class="footer-cta">
      <div class="cta-text">
        <h2>Ready for a cleaner workspace?</h2>
        <p>Get a free, no-obligation quote today.</p>
      </div>
      <div class="cta-actions">
        <a href={`${base}/contact`} class="btn-primary">Get a Quote</a>
        <a href="tel:0481422769" class="btn-secondary">Call 0481 422 769</a>
      </div>
    </div>

    <div class="separator"></div>

    <!-- Main Footer Links -->
    <div class="footer-grid">
      <!-- Column 1: Brand & About -->
      <div class="footer-col brand-col">
        <a href={base || "/"} class="brand-logo">GCC Melbourne</a>
        <p class="brand-desc">
          Professional commercial cleaning services you can trust. Fully
          insured, police-checked, and committed to excellence across Melbourne
          since 2015.
        </p>
        <div class="social-links">
          <a href="#" aria-label="LinkedIn" class="social-icon">
