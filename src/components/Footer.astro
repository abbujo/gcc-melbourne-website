<style>
  .footer-dark {
    background-color: #0f172a; /* Slate 900 */
    color: #e2e8f0; /* Slate 200 */
    padding: 5rem 0 2rem;
    font-family: "Inter", sans-serif;
  }

  /* --- CTA Bar --- */
  .footer-cta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 3rem;
  }

  .cta-text h2 {
    font-family: "Montserrat", sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .cta-text p {
    color: #94a3b8;
    font-size: 1.1rem;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    background: var(--brand-green);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: #00796b;
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .separator {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin-bottom: 4rem;
  }

  .separator-soft {
    height: 1px;
    background: rgba(255, 255, 255, 0.05);
    margin: 4rem 0 2rem;
  }

  /* --- Grid Layout --- */
  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: 3rem;
  }

  .col-title {
    color: white;
    font-family: "Montserrat", sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  /* Brand Column */
  .brand-logo {
    display: block;
    font-family: "Montserrat", sans-serif;
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    text-decoration: none;
    margin-bottom: 1rem;
  }

  .brand-desc {
    color: #94a3b8; /* Slate 400 */
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    max-width: 300px;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-icon {
    width: 2.25rem;
    height: 2.25rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cbd5e1;
    transition: all 0.2s;
  }

  .social-icon:hover {
    background: var(--brand-green);
    color: white;
    transform: translateY(-2px);
  }

  /* Links Columns */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: #cbd5e1; /* Slate 300 */
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--brand-green);
  }

  /* Contact Column */
  .contact-info {
    font-style: normal;
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #cbd5e1; /* Slate 300 */
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--brand-green);
  }

  /* Increase hit area and ensure icon alignment */
  .contact-item .icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--brand-green);
    flex-shrink: 0;
  }

  .address-line {
    color: #94a3b8;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .phone-link {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    text-decoration: none;
    margin-bottom: 0.25rem;
  }

  .email-link {
    color: var(--brand-green);
    text-decoration: none;
    font-size: 0.95rem;
  }

  .sub-title {
    color: white;
    font-size: 0.9rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .area-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .area-tags span {
    background: rgba(255, 255, 255, 0.05);
    color: #94a3b8;
    font-size: 0.75rem;
    padding: 0.25rem 0.6rem;
    border-radius: 4px;
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    color: #64748b; /* Slate 500 */
    font-size: 0.85rem;
  }

  .bottom-links {
    display: flex;
    gap: 1rem;
  }

  .bottom-links a {
    color: #64748b;
    text-decoration: none;
  }

  .bottom-links a:hover {
    color: #94a3b8;
  }

  .dot {
    color: #475569;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 640px) {
    .footer-cta {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .cta-text h2 {
      font-size: 1.75rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      text-align: center;
    }

    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      text-align: center;
    }
  }
</style>
