---
const defaultAudiences = [
    {
        title: "Offices & Corporate",
        icon: "office",
        desc: "Workspaces, boardrooms, and common areas.",
    },
    {
        title: "Medical Centres",
        icon: "medical",
        desc: "Hygienic cleaning for clinics and dental practices.",
    },
    {
        title: "Warehouses",
        icon: "warehouse",
        desc: "Industrial floors, amenities, and dusting.",
    },
    {
        title: "Retail & Showrooms",
        icon: "retail",
        desc: "Spotless presentation for your customers.",
    },
];
---

<section class="audience-section">
    <div class="gcc-container">
        <div class="header">
            <h2>Who This Service Is For</h2>
            <p>Tailored solutions for every industry type.</p>
        </div>

        <div class="audience-grid">
            {
                defaultAudiences.map((item) => (
                    <div class="audience-card">
                        <div class="icon-wrap">
                            {/* Simple generic icons based on name */}
                            {item.icon === "office" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5h2.021M3 3v18"
                                    />
                                </svg>
                            )}
                            {item.icon === "medical" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"
                                    />
                                </svg>
                            )}
                            {item.icon === "warehouse" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21"
                                    />
                                </svg>
                            )}
                            {item.icon === "retail" && (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z"
                                    />
                                </svg>
                            )}
                        </div>
                        <h3>{item.title}</h3>
                        <p>{item.desc}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .audience-section {
        padding: 2rem 0 4rem;
        background: white;
    }

    .header {
        text-align: center;
        margin-bottom: 3rem;
    }

    h2 {
        font-family: "Montserrat", sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 0.5rem;
    }

    .header p {
        color: var(--text-muted);
        font-size: 1rem;
    }

    .audience-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .audience-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid transparent;
        text-align: center;
        transition: all 0.2s ease;
    }

    .audience-card:hover {
        border-color: var(--border-soft);
        transform: translateY(-2px);
    }

    .icon-wrap {
        width: 3rem;
        height: 3rem;
        background: #f8fafc;
        color: var(--text-muted);
        border-radius: 50%;
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .audience-card:hover .icon-wrap {
        background: #e0f2f1;
        color: var(--brand-teal);
    }

    .icon-wrap svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    h3 {
        font-weight: 600;
        color: var(--brand-dark);
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    p {
        font-size: 0.875rem;
        color: var(--text-muted);
        line-height: 1.5;
    }
</style>
