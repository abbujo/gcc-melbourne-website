---
const melbImg =
  "https://images.pexels.com/photos/34785507/pexels-photo-34785507.jpeg?cs=srgb&dl=pexels-kylevermeulen-34785507.jpg&fm=jpg";

const areas = [
  "Melbourne CBD",
  "Southbank",
  "Docklands",
  "Richmond",
  "South Yarra",
  "Carlton",
  "Brunswick",
  "St Kilda",
];
---

<section class="gcc-section">
  <div class="gcc-container">
    <div class="areas">
      <div class="areas__media">
        <img src={melbImg} alt="Melbourne city skyline" loading="lazy" decoding="async" />
      </div>

      <div class="areas__copy">
        <h2 class="areas__title">Areas we serve</h2>
        <p class="areas__sub">
          We support commercial sites across Melbourne. Explore your suburb page for local details and services.
        </p>

        <div class="areas__chips">
          {areas.map((a) => (
            <span class="gcc-chip">{a}</span>
          ))}
        </div>

        <div class="areas__links">
          <a class="gcc-link" href="/areas">Browse all areas â†’</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .areas{
    display:grid;
    grid-template-columns: .9fr 1.1fr;
    gap: 1.5rem;
    align-items: stretch;
  }

  .areas__media{
    border-radius: var(--radius-2xl);
    overflow:hidden;
    border: 1px solid var(--border-soft);
    background: var(--bg-main);
  }
  .areas__media img{
    width:100%;
    height:100%;
    min-height: 320px;
    object-fit: cover;
    display:block;
  }

  .areas__copy{
    border: 1px solid var(--border-soft);
    background: var(--bg-main);
    border-radius: var(--radius-2xl);
    padding: 1.5rem;
  }

  .areas__title{ margin:0; font-size: 1.8rem; font-weight: 900; }
  .areas__sub{ margin:.45rem 0 0; color: var(--text-muted); }
  .areas__chips{ margin-top: 1rem; display:flex; flex-wrap:wrap; gap: .5rem; }
  .areas__links{ margin-top: 1rem; }

  @media (max-width: 900px){
    .areas{ grid-template-columns: 1fr; }
    .areas__media img{ min-height: 240px; }
  }
</style>
