---
import SmartImage from "../SmartImage.astro";
---

<section class="cta-section" id="cta-split">
    <div class="gcc-container">
        <div class="split-card">
            <div class="split-content">
                <span class="eyebrow"
                    >Professional commercial cleaning made simple.</span
                >
                <h2>Ready for a Cleaner Workplace?</h2>
                <p>
                    Join Melbourne businesses that rely on Green Commercial
                    Cleaning for consistent, high-quality results.
                </p>
                <div class="btn-group">
                    <a
                        href={`${import.meta.env.BASE_URL}/contact`}
                        class="btn-split">Get a Quote</a
                    >
                    <a
                        href={`${import.meta.env.BASE_URL}/pricing`}
                        class="btn-split-outline">View Pricing</a
                    >
                </div>
            </div>
            <div class="split-image">
                <SmartImage
                    name="side_hero"
                    alt="Office vacuuming"
                    loading="lazy"
                />
                <div class="overlay-gradient"></div>
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        padding: 2rem 0; /* Compact padding */
        position: relative;
        background-color: var(--bg-surface);
    }

    /* Font */
    h2 {
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
        line-height: 1.1;
    }

    .split-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        background: var(--bg-green-subtle);
        border-radius: 2rem;
        overflow: hidden;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.05);
    }

    .split-content {
        padding: 4rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
    }

    .eyebrow {
        color: var(--brand-green);
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.05em;
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
    }

    .split-content h2 {
        font-size: 2.75rem;
        color: var(--brand-dark);
        margin-bottom: 1.5rem;
    }

    .split-content p {
        font-size: 1.125rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 2.5rem;
        max-width: 90%;
    }

    .btn-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-split {
        background: var(--brand-dark);
        color: white;
        padding: 1rem 2.5rem;
        border-radius: 999px;
        font-weight: 600;
        text-decoration: none;
        transition:
            transform 0.2s,
            background 0.2s;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-split:hover {
        transform: translateY(-2px);
        background: var(--brand-teal);
    }

    .btn-split-outline {
        background: transparent;
        color: var(--brand-dark);
        border: 2px solid var(--brand-dark);
        padding: 0.875rem 2rem;
        border-radius: 999px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-split-outline:hover {
        background: var(--brand-dark);
        color: white;
    }

    .split-image {
        position: relative;
        overflow: hidden;
        min-height: 400px;
    }

    .split-image :global(img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s ease;
    }

    .split-card:hover .split-image :global(img) {
        transform: scale(1.05);
    }

    .overlay-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to right,
            rgba(240, 253, 244, 0.8),
            transparent 20%
        );
        pointer-events: none;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .split-card {
            grid-template-columns: 1fr;
        }

        .split-image {
            height: 300px;
            order: -1;
        }

        .split-content {
            padding: 2.5rem;
            align-items: center;
            text-align: center;
        }

        .split-content h2 {
            font-size: 2rem;
        }

        .split-content p {
            font-size: 1rem;
        }

        .overlay-gradient {
            background: linear-gradient(
                to bottom,
                rgba(240, 253, 244, 1),
                transparent 10%
            );
        }
    }
</style>
