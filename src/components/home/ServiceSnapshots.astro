---
const services = [
  {
    href: "/services/office-cleaning",
    title: "Office Cleaning",
    desc: "Ongoing office cleaning with clear checklists and consistent standards.",
    img: "https://images.pexels.com/photos/6196566/pexels-photo-6196566.jpeg",
  },
  {
    href: "/services/medical-centre-cleaning",
    title: "Medical Centre Cleaning",
    desc: "Detail-focused cleaning aligned with hygiene expectations.",
    img: "https://images.pexels.com/photos/6195122/pexels-photo-6195122.jpeg",
  },
  {
    href: "/services/warehouse-cleaning",
    title: "Warehouse Cleaning",
    desc: "Large-area cleaning with safety-first process and clear scope.",
    img: "https://images.pexels.com/photos/7451921/pexels-photo-7451921.jpeg",
  },
];
---

<section class="services">
  <div class="container">
    <h2>Our Services</h2>
    <p class="sub">Commercial cleaning solutions for Melbourne businesses.</p>

    <div class="grid">
      {
        services.map((s) => (
          <a href={s.href} class="card">
            <img src={s.img} alt="" loading="lazy" />
            <div class="body">
              <h3>{s.title}</h3>
              <p>{s.desc}</p>
              <span>View details â†’</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .services {
    padding: 3rem 0;
  }

  .services h2 {
    font-size: 1.9rem;
    font-weight: 900;
  }

  .sub {
    margin-top: 0.3rem;
    color: var(--text-muted);
  }

  .grid {
    margin-top: 1.5rem;
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(3, 1fr);
  }

  .card {
    border: 1px solid var(--border-soft);
    border-radius: 1.25rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.08s ease;
  }

  .card:hover {
    transform: translateY(-2px);
  }

  .card img {
    height: 170px;
    width: 100%;
    object-fit: cover;
  }

  .body h3 {
    font-size: 1.05rem;
    font-weight: 900;
  }

  .body p {
    margin-top: 0.3rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .body span {
    margin-top: 0.6rem;
    display: inline-block;
    color: var(--brand-teal);
    font-weight: 700;
  }

  @media (max-width: 900px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
