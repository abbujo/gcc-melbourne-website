---
import SmartImage from "../SmartImage.astro";
---

<section class="mini-about-section">
    <div class="gcc-container">
        <div class="split-card">
            <div class="split-content">
                <h2 class="section-title">About Green Commercial Cleaning</h2>
                <div class="text-content">
                    <p>
                        We provide reliable <strong>commercial cleaning</strong> and
                        <strong>office cleaning</strong> services for businesses across
                        <strong>Melbourne</strong>. Our experienced team
                        specialises in maintaining offices, medical centres,
                        warehouses, and other commercial facilities to the
                        highest standards.
                    </p>
                    <p class="mt-4">
                        We are <strong>fully insured</strong>, <strong
                            >WorkSafe-compliant</strong
                        >, and committed to delivering a safe, hygienic
                        environment for your staff and clients.
                    </p>
                </div>
            </div>
            <div class="split-image">
                <SmartImage
                    name="side_hero"
                    alt="Commercial cleaning team in Melbourne"
                    loading="lazy"
                />
                <div class="overlay-gradient"></div>
            </div>
        </div>
    </div>
</section>

<style>
    .mini-about-section {
        padding: 2rem 0;
        background-color: var(
            --bg-surface
        ); /* Gray background for alternation */
    }

    /* Matching StrongCTA card style */
    .split-card {
        display: grid;
        grid-template-columns: 1.25fr 0.75fr;
        background: var(--bg-green-subtle); /* Light green background */
        border-radius: 2rem;
        overflow: hidden;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 137, 123, 0.05);
    }

    .split-content {
        padding: 3.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .section-title {
        font-family: "Montserrat", sans-serif;
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
        line-height: 1.2;
    }

    .text-content p {
        font-family: "Inter", sans-serif;
        font-size: 1.125rem;
        line-height: 1.7;
        color: var(--text-muted);
        margin: 0;
    }

    .mt-4 {
        margin-top: 1rem !important;
    }

    .text-content strong {
        color: var(--brand-green);
        font-weight: 600;
    }

    /* Image Side */
    .split-image {
        position: relative;
        overflow: hidden;
        min-height: 350px;
    }

    .split-image :global(img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s ease;
    }

    .split-card:hover .split-image :global(img) {
        transform: scale(1.05);
    }

    .overlay-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to right,
            rgba(240, 253, 244, 1) 0%,
            transparent 15%
        );
        pointer-events: none;
    }

    @media (max-width: 900px) {
        .split-card {
            grid-template-columns: 1fr;
        }

        .split-image {
            height: 250px;
            order: -1;
        }

        .split-content {
            padding: 2.5rem 1.5rem;
            text-align: center;
        }

        .section-title {
            font-size: 1.75rem;
        }

        .text-content p {
            font-size: 1rem;
        }

        .overlay-gradient {
            background: linear-gradient(
                to bottom,
                rgba(240, 253, 244, 1) 0%,
                transparent 20%
            );
        }
    }
</style>
