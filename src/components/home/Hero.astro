---
import CTAButton from "../CTAButton.astro";
---

<section class="hero-section" id="hero">
  <div class="gcc-container">
    <div class="hero-grid">
      <!-- Text Card -->
      <div class="text-card fade-in-up">
        <div class="badges">
          <span class="badge">Melbourne-Based</span>
          <span class="badge">Fully Insured</span>
        </div>

        <h1 class="headline">
          Professional Commercial Cleaning in <span class="highlight"
            >Melbourne</span
          >
        </h1>

        <p class="subheadline">
          Reliable, police-checked cleaning teams for offices, medical centres,
          and warehouses. We don't cut cornersâ€”we clean them.
        </p>

        <div class="cta-group">
          <CTAButton
            href={`${import.meta.env.BASE_URL}/contact`}
            label="Get a Free Quote"
            variant="primary"
            icon="quote"
            class="cta-main shadow-lg hover:shadow-xl transition-shadow"
          />
          <CTAButton
            href="tel:+61481422769"
            label="0481 422 769"
            variant="outline"
            icon="phone"
          />
        </div>
      </div>

      <!-- Image Card -->
      <div class="image-card fade-in-up delay-100">
        <img
          src={`${import.meta.env.BASE_URL}/images/stock-images/hero.jpg`}
          alt="Professional commercial cleaning team in Melbourne"
          width="800"
          height="600"
          loading="eager"
          decoding="async"
        />
        <div class="image-overlay"></div>
      </div>
    </div>

    <!-- Trust Factors Box -->
    <div class="trust-box fade-in-up delay-200">
      <div class="trust-grid">
        <div class="trust-item">
          <div class="icon-circle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
              ></path>
            </svg>
          </div>
          <div class="trust-text">
            <strong>5-Star Rated</strong>
            <span>Based on 50+ reviews</span>
          </div>
        </div>

        <div class="trust-divider"></div>

        <div class="trust-item">
          <div class="icon-circle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="trust-text">
            <strong>Same-Day Quotes</strong>
            <span>Fast & transparent pricing</span>
          </div>
        </div>

        <div class="trust-divider"></div>

        <div class="trust-item">
          <div class="icon-circle">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12.75L11.25 15 15 9.75M21 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 12 2s10 4.477 10 10z"
              ></path>
            </svg>
          </div>
          <div class="trust-text">
            <strong>Satisfaction Guaranteed</strong>
            <span>Or we re-clean for free</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    padding: 3rem 0 5rem;
    background: linear-gradient(to bottom, #f0fdf4 0%, #ffffff 100%);
    overflow: hidden;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: stretch; /* Ensures equal height */
    margin-bottom: 2rem;
  }

  /* --- Text Card --- */
  .text-card {
    background: white;
    padding: 3.5rem;
    border-radius: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.03);
    position: relative;
    z-index: 2;
  }

  .badges {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .badge {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--brand-teal);
    background: #e0f2f1;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    border: 1px solid rgba(0, 137, 123, 0.15);
  }

  .headline {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--brand-dark);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .highlight {
    color: var(--brand-green);
    white-space: nowrap;
    position: relative;
  }

  /* Underline effect for highlight */
  .highlight::after {
    content: "";
    position: absolute;
    bottom: 4px;
    left: 0;
    width: 100%;
    height: 10px;
    background: rgba(0, 137, 123, 0.15);
    z-index: -1;
    transform: rotate(-1deg);
  }

  .subheadline {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-muted);
    margin-bottom: 2.5rem;
    max-width: 95%;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: auto; /* Push to bottom if content is short */
  }

  /* --- Image Card --- */
  .image-card {
    position: relative;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
    min-height: 500px; /* Ensure substantial height */
  }

  .image-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.7s ease;
  }

  .image-card:hover img {
    transform: scale(1.03);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.2), transparent);
    pointer-events: none;
  }

  /* --- Trust Factors Box --- */
  .trust-box {
    background: white;
    border-radius: 1.5rem;
    padding: 2rem;
    box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.03);
  }

  .trust-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
    justify-content: center;
  }

  .icon-circle {
    width: 3rem;
    height: 3rem;
    background: #f0fdf4;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--brand-green);
    flex-shrink: 0;
  }

  .icon-circle svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .trust-text {
    display: flex;
    flex-direction: column;
  }

  .trust-text strong {
    color: var(--brand-dark);
    font-weight: 700;
    font-size: 1.05rem;
  }

  .trust-text span {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 500;
  }

  .trust-divider {
    width: 1px;
    height: 3rem;
    background: var(--border-soft);
    margin: 0 1rem;
  }

  /* Animations */
  .fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .delay-100 {
    animation-delay: 0.1s;
  }
  .delay-200 {
    animation-delay: 0.2s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* --- Responsive --- */
  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .text-card {
      padding: 2.5rem 1.5rem;
      text-align: center;
      align-items: center;
    }

    .headline {
      font-size: 2.5rem;
    }

    .image-card {
      min-height: 300px;
      order: -1; /* Image first on mobile */
    }

    .trust-grid {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .trust-item {
      justify-content: flex-start;
      width: 100%;
    }

    .trust-divider {
      display: none;
    }

    .badges {
      justify-content: center;
    }
  }
</style>
