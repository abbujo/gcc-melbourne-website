---
import CTAButton from "../CTAButton.astro";
---

<section class="hero">
  <div class="container">
    <div class="hero-grid">
      <!-- Copy -->
      <div class="hero-copy">
        <p class="eyebrow">Melbourne-based â€¢ Commercial Cleaning</p>

        <h1>Commercial Cleaning in Melbourne</h1>

        <p class="subtitle">
          Reliable, insured, checklist-based cleaning for offices, medical
          centres, warehouses and more.
        </p>

        <div class="cta">
          <CTAButton
            href="/contact"
            label="Get a Quote"
            variant="primary"
            icon="quote"
          />
          <CTAButton
            href="tel:+61481422769"
            label="Call Us"
            variant="outline"
            icon="phone"
          />
        </div>

        <div class="trust">
          <span>Fully insured</span>
          <span>Police-checked staff</span>
          <span>Checklist-based</span>
          <span>After-hours available</span>
          <span>Quality checks</span>
        </div>
      </div>

      <!-- Image -->
      <div class="hero-media">
        <img
          src="https://images.pexels.com/photos/34516670/pexels-photo-34516670.jpeg"
          alt="Commercial cleaner at work"
          loading="eager"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 2.5rem 0;
  }

  .container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1.15fr 0.85fr;
    gap: 2rem;
    align-items: center;
  }

  .hero-copy h1 {
    margin: 0.5rem 0 0;
    font-size: clamp(1.9rem, 3.5vw, 2.6rem);
    font-weight: 900;
    line-height: 1.08;
  }

  .eyebrow {
    font-size: 0.8rem;
    font-weight: 800;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--brand-teal);
  }

  .subtitle {
    margin-top: 0.75rem;
    font-size: 1rem;
    color: var(--text-muted);
    max-width: 42rem;
  }

  .cta {
    margin-top: 1rem;
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .trust {
    margin-top: 0.9rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
  }

  .trust span {
    font-size: 0.8rem;
    padding: 0.35rem 0.6rem;
    border-radius: 999px;
    background: var(--bg-surface);
    border: 1px solid var(--border-soft);
  }

  .hero-media img {
    width: 100%;
    height: 260px;
    object-fit: cover;
    border-radius: 1.25rem;
  }

  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
    }
    .hero-media img {
      height: 220px;
    }
  }
</style>
