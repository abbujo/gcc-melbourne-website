---
import CTAButton from "../CTAButton.astro";
import SmartImage from "../SmartImage.astro";
---

<section class="hero-section" id="hero">
  <div class="gcc-container">
    <div class="hero-main-layout">
      <!-- 1. TEXT CONTENT AREA -->
      <div class="hero-text fade-in-up">
        <h1 class="headline">
          Professional Commercial Cleaning in <span class="highlight"
            >Melbourne</span
          >
        </h1>

        <p class="subheadline">
          Reliable office and commercial cleaning services for Melbourne
          businesses.
        </p>

        <div class="cta-group">
          <CTAButton
            href={`${import.meta.env.BASE_URL}/contact`}
            label="Get a Free Quote"
            variant="primary"
            icon="quote"
            class="cta-main shadow-lg hover:shadow-xl transition-shadow"
          />
          <CTAButton
            href="tel:+61422780703"
            label="0422 780 703"
            variant="outline"
            icon="phone"
          />
        </div>
      </div>

      <!-- 2. IMAGE AREA -->
      <div class="hero-image">
        <SmartImage
          name="main_hero"
          alt="Professional commercial cleaning team in Melbourne"
          width={800}
          height={600}
          loading="eager"
          decoding="async"
          fetchpriority="high"
          sizes="(max-width: 768px) 100vw, 50vw"
        />
        <div class="image-overlay"></div>
      </div>

      <!-- 3. TRUST FACTORS AREA -->
      <div class="hero-trust fade-in-up delay-200">
        <div class="trust-grid">
          <!-- Item 1: Google Reviews -->
          <a
            href="https://maps.app.goo.gl/gedrkXA2o8nd1Q47A"
            target="_blank"
            rel="noopener noreferrer"
            class="trust-item hover-scale"
          >
            <div class="icon-box">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="32px"
                height="32px"
              >
                <path
                  fill="#4285F4"
                  d="M23.745 12.27c0-.79-.07-1.54-.19-2.27h-11.3v4.51h6.47c-.29 1.48-1.14 2.73-2.4 3.58v3h3.86c2.26-2.09 3.56-5.17 3.56-8.82z"
                ></path>
                <path
                  fill="#34A853"
                  d="M12.255 24c3.24 0 5.95-1.08 7.93-2.91l-3.86-3c-1.08.72-2.45 1.16-4.07 1.16-3.13 0-5.78-2.11-6.73-4.96h-3.98v3.09C3.515 21.3 7.565 24 12.255 24z"
                ></path>
                <path
                  fill="#FBBC05"
                  d="M5.525 14.29c-.25-.72-.38-1.49-.38-2.29s.14-1.57.38-2.29V6.62h-3.98a11.86 11.86 0 000 10.76l3.98-3.09z"
                ></path>
                <path
                  fill="#EA4335"
                  d="M12.255 4.75c1.77 0 3.35.61 4.6 1.8l3.42-3.42C18.205 1.19 15.495 0 12.255 0 7.565 0 3.515 2.7 1.545 6.62l3.98 3.09c.95-2.85 3.6-4.96 6.73-4.96z"
                ></path>
              </svg>
            </div>
            <div class="trust-text">
              <strong>4.7 Rated</strong>
              <span class="trust-sub">On Google</span>
            </div>
          </a>

          <!-- Item 2: WorkSafe -->
          <div class="trust-item">
            <div class="icon-box wide-logo">
              <img
                src={`${import.meta.env.BASE_URL}/images/generated/logo/WSV_logo.png`}
                alt="WorkSafe Victoria"
                class="trust-img"
              />
            </div>
            <div class="trust-text">
              <strong>WorkSafe</strong>
              <span class="trust-sub">Compliant</span>
            </div>
          </div>

          <!-- Item 3: Labour Hire -->
          <div class="trust-item">
            <div class="icon-box wide-logo">
              <img
                src={`${import.meta.env.BASE_URL}/images/generated/logo/LHA_logo.png`}
                alt="Labour Hire Authority"
                class="trust-img"
              />
            </div>
            <div class="trust-text">
              <strong>LHA</strong>
              <span class="trust-sub">Licensed</span>
            </div>
          </div>

          <!-- Item 4: Melbourne Based -->
          <div class="trust-item">
            <div class="icon-box">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-6 h-6 text-green-600"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                ></path>
              </svg>
            </div>
            <div class="trust-text">
              <strong>Melbourne</strong>
              <span class="trust-sub">Local Team</span>
            </div>
          </div>

          <!-- Item 5: Fully Insured -->
          <div class="trust-item">
            <div class="icon-box">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-6 h-6 text-green-600"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 12.75L11.25 15 15 9.75M21 12c0 5.523-4.477 10-10 10S1 17.523 1 12 5.477 2 12 2s10 4.477 10 10z"
                ></path>
              </svg>
            </div>
            <div class="trust-text">
              <strong>Fully Insured</strong>
              <span class="trust-sub">Security First</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* =========================================
     BASE & DESKTOP STYLES
     Default state: Split View + Bottom Trust Box
     ========================================= */

  .hero-section {
    padding: 2rem 0 2rem; /* Compact padding */
    background: linear-gradient(
      to bottom,
      var(--bg-green-subtle) 0%,
      var(--bg-main) 100%
    );
    overflow: hidden;
  }

  /* Grid Layout System */
  .hero-main-layout {
    display: grid;
    /* Desktop: 2 columns, 2 rows */
    grid-template-columns: 1fr 1fr;
    grid-template-areas:
      "text image"
      "trust trust";
    gap: 2rem;
    align-items: stretch;
  }

  /* --- 1. Text Area --- */
  .hero-text {
    grid-area: text;
    background: white;
    padding: 3.5rem;
    border-radius: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.03);
    position: relative;
    z-index: 2;
  }

  /* --- 2. Image Area --- */
  .hero-image {
    grid-area: image;
    position: relative;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.1);
    min-height: 500px;
  }

  .hero-image :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.7s ease;
  }

  .hero-image:hover :global(img) {
    transform: scale(1.03);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    /* Desktop overlay is subtle */
    background: linear-gradient(to top, rgba(0, 0, 0, 0.2), transparent);
    pointer-events: none;
  }

  /* --- 3. Trust Area --- */
  .hero-trust {
    grid-area: trust;
    background: white;
    border-radius: 1.5rem;
    padding: 2rem;
    box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.03);
  }

  .trust-grid {
    display: flex;
    justify-content: space-between; /* Spread items across width */
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem; /* Reduced gap to fit 5 items better */
    width: 100%;
  }

  /* Desktop Icons */
  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem; /* Slightly tighter gap */
    flex: 1; /* Allow growing to fill space */
    justify-content: center;
    text-decoration: none;
    transition: transform 0.2s ease;
    min-width: 180px; /* Slightly smaller minimum */
  }

  .hover-scale:hover {
    transform: translateY(-2px);
  }

  /* Replaces icon-circle for more flexible container */
  .icon-box {
    width: 3.5rem;
    height: 3.5rem;
    background: var(--bg-green-subtle);
    border-radius: 12px; /* Soft square */
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    padding: 0.5rem;
  }

  /* Variant for wide logos (WorkSafe, LHA) */
  .icon-box.wide-logo {
    width: auto; /* Let it stretch */
    min-width: 3.5rem; /* But at least as wide as the others */
    padding: 0.5rem 1rem; /* More horizontal padding */
    aspect-ratio: auto;
  }

  .icon-box svg {
    width: 1.75rem; /* Explicit size for SVGs */
    height: 1.75rem;
    color: var(--brand-green);
  }

  .trust-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .trust-text {
    display: flex;
    flex-direction: column;
  }

  .trust-text strong {
    color: var(--brand-dark);
    font-weight: 700;
    font-size: 1.05rem;
  }

  .trust-sub {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 500;
    display: block; /* Visible on desktop */
  }

  /* --- Typography & Elements (Shared/Desktop) --- */
  .badges {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .badge {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--brand-teal);
    background: var(--bg-teal-subtle);
    padding: 0.5rem 1rem;
    border-radius: 999px;
    border: 1px solid rgba(0, 137, 123, 0.15);
  }

  .headline {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--brand-dark);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .highlight {
    color: var(--brand-green);
    white-space: nowrap;
    position: relative;
  }

  .highlight::after {
    content: "";
    position: absolute;
    bottom: 4px;
    left: 0;
    width: 100%;
    height: 10px;
    background: rgba(0, 137, 123, 0.15);
    z-index: -1;
    transform: rotate(-1deg);
  }

  .subheadline {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-muted);
    margin-bottom: 2.5rem;
    max-width: 95%;
  }

  /* Trust Indicators (Google + Logos) */
  .trust-indicators {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .trust-indicators .logo-group {
    gap: 2rem; /* More space between logos in the bar */
  }

  /* Google Reviews Badge */
  .google-reviews {
    display: inline-block;
    width: fit-content;
  }

  .logo-group {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    opacity: 0.9;
  }

  .trust-logo {
    height: 40px;
    width: auto;
    object-fit: contain;
    /* mix-blend-mode: multiply;  Optional: if logos have white bg */
  }

  .review-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    background: white;
    padding: 0.5rem 1rem;
    border-radius: 99px;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid var(--border-soft);
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .review-link:hover {
    transform: translateY(-2px);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .google-logo {
    display: flex;
    align-items: center;
  }

  .review-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }

  .rating {
    color: var(--accent-amber); /* Google Star Color */
    font-weight: 700;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
  }

  .source {
    color: var(--text-subtle);
    font-size: 0.75rem;
    font-weight: 500;
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: auto;
  }

  /* =========================================
     MOBILE STYLES (Max-width: 900px)
     The "Immersive" Transformation
     ========================================= */
  @media (max-width: 900px) {
    .hero-section {
      padding: 1rem 0 3rem;
    }

    /* 
       Step 1: Grid Layout with Explicit Rows
       Row 1: Main Content Space (Text)
       Row 2: Trust Factors Space (Auto height)
    */
    .hero-main-layout {
      position: relative; /* Anchor for absolute image */
      grid-template-columns: 1fr;
      grid-template-rows: 1fr auto; /* Explicit separation */
      grid-template-areas: "stack"; /* All items occupy 'stack' */
      gap: 0;

      /* Container Styling for the "Card" look */
      border-radius: 1.5rem;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      min-height: 550px; /* Force height for immersion */
      align-items: end; /* Push content to bottom */
    }

    /* 
       Step 2: Layer the Image (Background) 
       Now absolutely positioned to guarantee full coverage
    */
    .hero-image {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      border-radius: 0; /* Wrapper handles radius */
      box-shadow: none;
    }

    .hero-image :global(img) {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Stronger overlay for readability */
    .image-overlay {
      background: linear-gradient(
        to top,
        rgba(0, 20, 15, 0.95) 0%,
        rgba(0, 20, 15, 0.6) 50%,
        rgba(0, 0, 0, 0) 100%
      );
    }

    /* 
       Step 3: Layer the Text (Foreground) 
       Sits at z-index 2 in TOP row.
    */
    .hero-text {
      grid-column: 1;
      grid-row: 1;
      z-index: 2;
      background: transparent; /* Remove white bg */
      box-shadow: none;
      border: none;

      /* Padding just around text */
      padding: 2rem 1.5rem 1rem;

      /* Align content to bottom of its row */
      align-self: end;
      justify-content: flex-end;
      color: white; /* Text turns white */
    }

    /* Typography Adjustments for Dark Background */
    .headline {
      color: white;
      font-size: 2rem; /* Mobile sizing */
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      margin-bottom: 0.5rem; /* Small spacing */
    }

    .highlight {
      color: var(--brand-teal); /* Lighter teal for contrast against dark */
    }

    .highlight::after {
      display: none; /* Remove underline on mobile */
    }

    .subheadline {
      display: none; /* Removed as per user request */
    }

    /* Glassmorphism Badges */
    .badge {
      display: none; /* Removed as per user request */
    }

    .badges {
      display: none; /* Removed as per user request */
    }

    .trust-indicators {
      margin-bottom: 1.5rem;
      gap: 1rem;
    }

    .google-reviews {
      margin-bottom: 0; /* Let flex gap handle it */
    }

    .logo-group {
      flex-wrap: wrap;
    }

    .trust-logo {
      height: 32px; /* Smaller on mobile */
      filter: brightness(0) invert(1); /* Make logos white on dark bg */
      opacity: 0.8;
    }

    .review-link {
      background: rgba(255, 255, 255, 0.1); /* Glass on dark bg */
      border: 1px solid rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(4px);
    }

    .source {
      color: var(--text-ondark-main); /* Light text on mobile */
    }

    /* Hide CTA on Mobile (per request) */
    .cta-group {
      display: none;
    }

    /* 
       Step 4: Incorporate Trust Factors 
       Sits at z-index 3 in BOTTOM row.
    */
    .hero-trust {
      display: none; /* Hidden on mobile by default now (contains logos) */
    }

    .trust-grid {
      justify-content: flex-start;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    /* Transform Logic: Box -> Pill with High Contrast */
    .trust-item {
      flex: 0 1 auto; /* Don't stretch */
      background: rgba(0, 20, 15, 0.85); /* Much darker for readability */
      padding: 0.5rem 0.9rem;
      border-radius: 99px;
      gap: 0.5rem;
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .trust-desc,
    .trust-sub,
    .trust-divider {
      display: none;
    }

    .trust-text strong {
      color: var(--icon-green-light); /* Soft green-white */
      font-size: 0.85rem;
      font-weight: 600;
      white-space: nowrap;
    }

    /* Resize Icon Container */
    .icon-circle {
      width: auto;
      height: auto;
      background: transparent;
      border-radius: 0;
      color: var(--icon-green-light);
    }

    .icon-circle svg {
      width: 1rem;
      height: 1rem;
    }
  }
</style>

<!-- ANIMATIONS -->
<style>
  .fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .delay-100 {
    animation-delay: 0.1s;
  }
  .delay-200 {
    animation-delay: 0.2s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
