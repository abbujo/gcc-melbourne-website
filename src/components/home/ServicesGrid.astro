---
const services = [
    {
        title: "Office Cleaning",
        desc: "Maintain a pristine workspace with daily or weekly protocols.",
        href: `${import.meta.env.BASE_URL}/services/office-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/office_cleaning_staff.webp`,
    },
    {
        title: "Medical Centres",
        desc: "Hygienic, compliant cleaning for clinics and medical facilities.",
        href: `${import.meta.env.BASE_URL}/services/medical-centre-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/medical_clean.webp`,
    },
    {
        title: "Industrial & Warehouse",
        desc: "Safety-focused cleaning for factories and industrial sites.",
        href: `${import.meta.env.BASE_URL}/services/warehouse-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/cleaner_industrial.webp`,
    },
    {
        title: "Window Cleaning",
        desc: "Professional internal and external window cleaning.",
        href: `${import.meta.env.BASE_URL}/services/window-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/glass_cleaning.webp`,
    },
    {
        title: "Steam & Carpet",
        desc: "Deep cleaning for carpets, upholstery and hard floors.",
        href: `${import.meta.env.BASE_URL}/services/steam-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/steam_cleaning.webp`,
    },
    {
        title: "Post-Construction",
        desc: "Detailed final clean for new builds and renovations.",
        href: `${import.meta.env.BASE_URL}/services/construction-cleaning`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/cleaner_post_construction.webp`,
    },
    {
        title: "Pressure Washing",
        desc: "Deep cleaning for driveways, paths and hard floors.",
        href: `${import.meta.env.BASE_URL}/services/pressure-washing`,
        image: `${import.meta.env.BASE_URL}/images/stock-images/cleaner_pressure_washing.webp`,
    },
];
---

<section class="services-section" id="services2">
    <div class="gcc-container">
        <!-- HEADER -->
        <div class="header">
            <h2 class="section-title">Specialised Cleaning Services</h2>
            <p class="section-subtitle">
                We cover every corner of your business with trained
                professionals.
            </p>
        </div>

        <div class="grid">
            {
                services.map((s) => (
                    <a href={s.href} class="service-card group">
                        
                        <!-- Image Container -->
                        <div class="image-box">
                            <img
                                src={s.image}
                                alt={s.title}
                                loading="lazy"
                                width="400"
                                height="300"
                            />
                            <!-- Overlay for hover effect -->
                            <div class="overlay"></div>
                        </div>

                        <!-- Content Container -->
                        <div class="content">
                            <div class="text-wrap">
                                <h3>{s.title}</h3>
                                <p>{s.desc}</p>
                            </div>
                            
                            <span class="link-text">
                                View Details 
                                <span class="arrow-circle">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                                    </svg>
                                </span>
                            </span>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<style>
    .services-section {
        padding: 5rem 0;
        background: #f8fafc;
    }

    .header {
        text-align: center;
        max-width: 45rem;
        margin: 0 auto 3.5rem;
    }

    .section-title {
        font-family: "Montserrat", sans-serif;
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--brand-dark);
        margin-bottom: 0.75rem;
        letter-spacing: -0.02em;
    }

    .section-subtitle {
        color: var(--text-muted);
        font-size: 1.1rem;
        line-height: 1.6;
        font-family: "Montserrat", sans-serif;
    }

    /* GRID BASE */
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }

    /* =========================================
       CARD DESIGN: "Professional Accent Deluxe"
       ========================================= */
    .service-card {
        display: flex;
        flex-direction: column;
        background: white;
        text-decoration: none;
        color: inherit;
        overflow: hidden;
        position: relative;
        border-radius: 6px; /* Slightly structured */
        
        /* The Top Green Accent */
        border-top: 4px solid var(--brand-green);
        
        /* Subtle deep shadow for depth */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
        
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    /* Hover State: Lift & Glow */
    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* --- Image Area --- */
    .image-box {
        position: relative;
        height: 220px;
        overflow: hidden;
        background: #f1f5f9;
    }

    .image-box img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s ease;
    }

    /* Zoom Effect */
    .service-card:hover .image-box img {
        transform: scale(1.08); /* Gentle cinematic zoom */
    }

    /* Gradient Overlay */
    .overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, transparent 100%);
        opacity: 0.5;
        transition: opacity 0.3s ease;
    }

    .service-card:hover .overlay {
        opacity: 0.2; /* Lighten on hover */
    }

    /* --- Content Area --- */
    .content {
        padding: 1.5rem; /* More compact desktop padding */
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        justify-content: space-between;
    }

    .text-wrap {
        margin-bottom: 1.5rem;
    }

    h3 {
        font-family: "Montserrat", sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    p {
        font-family: "Montserrat", sans-serif;
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.5;
        font-weight: 400;
    }

    /* 
       Desktop "Enter" Button 
       Attractive Pill Shape that expands/glows 
    */
    .link-text {
        font-family: "Montserrat", sans-serif;
        font-size: 0.85rem;
        font-weight: 700;
        color: var(--brand-green);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        
        /* Pill Button Styling */
        background: #f0fdf4;
        padding: 0.5rem 1rem;
        border-radius: 99px;
        align-self: flex-start; /* Align left */
        transition: all 0.3s ease;
    }

    .arrow-circle {
        display: none; /* Hide old circle, use simple icon inside button */
    }
    
    /* Add new icon handling if needed, or re-use existing SVG inside link-text directly */
    .link-text svg {
        width: 1rem;
        height: 1rem;
        transition: transform 0.3s ease;
    }

    /* Hover Interaction */
    .service-card:hover .link-text {
        background: var(--brand-green);
        color: white;
        padding-right: 1.25rem; /* Slight expansion */
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }

    .service-card:hover .link-text svg {
        transform: translateX(3px);
    }

    /* =========================================
       MOBILE LAYOUT (Compact List View)
       "The Bold & Efficient"
       ========================================= */
    @media (max-width: 900px) {
        .services-section {
            padding: 3rem 0;
            background: white;
        }

        .header {
            margin-bottom: 2.5rem;
            padding: 0 1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        /* 
           Redesigning for "List" feel 
           Side Accent | Image | Content 
        */
        .service-card {
            flex-direction: row;
            align-items: flex-start; /* Align to top for longer text */
            min-height: auto;
            
            /* Remove top border, add Side Border */
            border-top: none;
            border-left: 5px solid var(--brand-green);
            border-radius: 0.5rem;
            
            /* Simplify styling */
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border-right: 1px solid rgba(0,0,0,0.03);
            border-bottom: 1px solid rgba(0,0,0,0.03);
        }
        
        /* Mobile Hover State */
        .service-card:active {
            background: #f8fafc;
            transform: scale(0.99);
        }

        /* Small Square Image */
        .image-box {
            width: 85px;
            height: 85px;
            margin: 0.75rem 0 0.75rem 0.75rem; /* Balanced margin */
            border-radius: 6px;
            flex-shrink: 0;
        }
        
        .image-box img {
            border-radius: 6px;
        }
        
        .overlay { display: none; }

        .content {
            padding: 0.75rem 1rem;
            justify-content: center;
            flex-direction: column;
            align-items: flex-start;
        }

        .text-wrap {
            margin-bottom: 0;
            width: 100%;
        }

        h3 {
            font-size: 1.05rem;
            margin-bottom: 0.25rem;
            line-height: 1.25;
        }

        p {
            display: block; /* Show full text */
            font-size: 0.85rem;
            line-height: 1.4;
            margin-bottom: 0;
            opacity: 0.9;
            /* No truncation */
        }

        /* HIDE BUTTON ON MOBILE */
        .link-text {
            display: none;
        }
    }
</style>
