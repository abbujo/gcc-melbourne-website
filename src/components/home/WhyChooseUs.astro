<section class="trust-bento-section" id="why-choose-us-final">
    <div class="gcc-container">
        <div class="bento-grid">
            <!-- Header Text -->
            <div class="bento-header">
                <span class="eyebrow">The GCC Difference</span>
                <h2 class="section-title">Why Partner With Us?</h2>
                <p class="section-subtitle">
                    We don't just clean; we care for your business environment.
                    Reliable, transparent, and thorough.
                </p>
            </div>

            <!-- Main Image (Left Column on Desktop) -->
            <div class="bento-image">
                <img
                    src={`${import.meta.env.BASE_URL}/images/stock-images/cleaners-2.webp`}
                    alt="Professional cleaning staff"
                    loading="lazy"
                />
                <div class="overlay-gradient"></div>
                <div class="float-badge">
                    <span class="badge-icon">üèÜ</span>
                    <div>
                        <strong>10+ Years</strong>
                        <span>Of Excellence</span>
                    </div>
                </div>
            </div>

            <!-- Feature Grid (Right Column on Desktop) -->
            <div class="bento-features">
                {
                    benefits.map((item) => (
                        <div class="feature-card">
                            <div class="icon-box" set:html={item.icon} />
                            <div class="content-box">
                                <h3>{item.title}</h3>
                                <p>{item.desc}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .trust-bento-section {
        padding: 6rem 0;
        background-color: #ffffff;
        overflow: hidden;
    }

    .bento-grid {
        display: grid;
        grid-template-columns: 1fr 1.25fr; /* Image slightly narrower than features */
        grid-template-rows: auto 1fr;
        gap: 3rem;
        align-items: start;
    }

    /* Header spans full width on mobile, right column on desktop could work too, but let's keep it clean */
    .bento-header {
        grid-column: 1 / -1;
        text-align: center;
        max-width: 700px;
        margin: 0 auto 1rem;
    }

    .eyebrow {
        color: var(--brand-teal);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.875rem;
        display: block;
        margin-bottom: 0.75rem;
    }

    .section-title {
        font-family: "Montserrat", sans-serif;
        font-weight: 800;
        color: var(--brand-dark);
        font-size: 2.75rem;
        line-height: 1.1;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* --- Left Column: Image --- */
    .bento-image {
        position: relative;
        border-radius: 2rem;
        overflow: hidden;
        height: 100%;
        min-height: 500px;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
    }

    .bento-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.7s ease;
    }

    .bento-image:hover img {
        transform: scale(1.03);
    }

    .overlay-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
        pointer-events: none;
    }

    .float-badge {
        position: absolute;
        bottom: 2rem;
        left: 2rem;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        padding: 1rem 1.5rem;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .badge-icon {
        font-size: 2rem;
    }

    .float-badge div {
        display: flex;
        flex-direction: column;
    }

    .float-badge strong {
        color: var(--brand-dark);
        font-weight: 800;
        font-size: 1.1rem;
        line-height: 1.2;
    }

    .float-badge span {
        font-size: 0.85rem;
        color: var(--text-muted);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* --- Right Column: Features --- */
    .bento-features {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .feature-card {
        background: white;
        padding: 1.5rem;
        border-radius: 1rem;
        border: 1px solid rgba(0, 0, 0, 0.03);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
        display: flex;
        flex-direction: column; /* Icon top, text bottom usually better for grid, but user asked for "Next to it" */
        gap: 1rem;
        transition: all 0.2s ease;
    }

    /* Modify layout for desktop to be side-by-side as requested? 
       "emoji and the text is below it... have the text next to it" 
       So Icon Left | Text Right.
    */
    .feature-card {
        flex-direction: row;
        align-items: flex-start;
    }

    .feature-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        border-color: rgba(0, 137, 123, 0.1);
    }

    .icon-box {
        width: 3rem;
        height: 3rem;
        background: #f0fdf4;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--brand-green);
        flex-shrink: 0;
    }

    .icon-box :global(svg) {
        width: 1.5rem;
        height: 1.5rem;
    }

    .content-box {
        display: flex;
        flex-direction: column;
    }

    .content-box h3 {
        font-weight: 700;
        font-size: 1rem;
        color: var(--brand-dark);
        margin-bottom: 0.25rem;
    }

    .content-box p {
        font-size: 0.875rem;
        color: var(--text-muted);
        line-height: 1.4;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .trust-bento-section {
            padding: 3rem 0;
        }

        .bento-grid {
            display: flex; /* Stack vertically */
            flex-direction: column;
            gap: 3rem;
        }

        .bento-header {
            text-align: left; /* Align left usually looks better on mobile? Or keep center? Keeping center to match previous sections. */
            text-align: center;
            padding: 0 1rem;
        }

        .section-title {
            font-size: 2rem; /* Match Hero/Services */
            margin-bottom: 0.5rem;
        }

        .section-subtitle {
            font-size: 1rem;
        }

        .bento-image {
            min-height: 250px;
            max-height: 300px;
            border-radius: 1.5rem;
            order: 2; /* Image in middle */
        }

        .bento-features {
            order: 3;
            grid-template-columns: 1fr; /* Single column stack */
            gap: 1rem;
        }

        /* 
           Specific Request: 
           "Icon and Title side-by-side, Description below" 
        */
        .feature-card {
            display: grid;
            grid-template-columns: auto 1fr;
            grid-template-rows: auto auto;
            column-gap: 1rem;
            row-gap: 0.5rem;
            align-items: center;
            padding: 1.25rem;
        }

        .icon-box {
            grid-row: 1;
            grid-column: 1;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 0.5rem;
        }

        .icon-box :global(svg) {
            width: 1.25rem;
            height: 1.25rem;
        }

        /* Unwrap the text box to place Title and P separately in the grid */
        .content-box {
            display: contents;
        }

        .content-box h3 {
            grid-row: 1;
            grid-column: 2;
            margin: 0;
            font-size: 1.1rem;
            align-self: center;
        }

        .content-box p {
            grid-row: 2;
            grid-column: 1 / -1; /* Spans full width below */
            margin: 0;
            padding-top: 0.25rem; /* Slight breather */
            font-size: 0.95rem;
        }
    }
</style>
