---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contact | GCC Melbourne"
  description="Request a quote for commercial cleaning in Melbourne."
>
  <main class="mx-auto max-w-3xl px-6 py-12">
    <h1 class="text-3xl font-bold">Get a Quote</h1>

    <form
      class="mt-6 space-y-4 rounded-2xl border border-slate-200 p-6"
      method="post"
    >
      <input
        name="name"
        placeholder="Name"
        required
        class="w-full rounded-xl border border-slate-300 px-4 py-3"
      />
      <input
        name="phone"
        placeholder="Phone"
        required
        class="w-full rounded-xl border border-slate-300 px-4 py-3"
      />
      <textarea
        name="message"
        placeholder="Message"
        rows="5"
        class="w-full rounded-xl border border-slate-300 px-4 py-3"></textarea>
      <button class="gcc-btn gcc-btn-primary w-full">Submit</button>
    </form>
  </main>
</Layout>
